<div class="container">
    {{#each posts}}
    <div class="media">
        <img class="mr-3 post-user-pic" src="{{user.image}}">
        <div class="media-body">
            <h3 class="mt-0">{{user.fullname}}</h3>
            <h4>{{title}} <small><i class="fa fa-globe"></i></small></h4>
            <p>{{body}}</p>
            <small>{{date}}</small>
            <br>
            {{#if allowComments}}
            <br>
            <form action="/addComment/{{_id}}" method="POST" class="form-inline">
                <div class="form-group mx-sm-3 mb-2">
                    <input type="text" class="form-control" placeholder="Leave your comment">
                </div>
                <button type="submit" class="btn btn-primary mb-2"><i class="fa fa-comment"></i></button>
            </form>
            {{else}}
            <p class="red">Comment is not allowed</p>
            {{/if}}
        </div>
    </div>
    <hr>
    {{else}}
    <p>Nothing is posted yet!</p>
    {{/each}}
</div>