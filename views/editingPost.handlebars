<div class="container">
    <h1>Edit A Post!</h1>
    <form action="/editingPost/{{post._id}}?_method=PUT" method="POST">
        <div class="form-group">
            <label for="exampleInputEmail1">Title</label>
            <input value="{{post.title}}" type="text" name="title" class="form-control" placeholder="What do you want to share...">
        </div>
        <div class="form-group">
            <label for="body">Comment</label>
            <textarea type="text" name="body" class="form-control" placeholder="Type something...">{{post.body}}</textarea>
        </div>
        <div class="form-group">
            <label for="status">Status</label>
            <select name="status">
                <option value="public">Public</option>
                <option value="private">Private</option>
            </select>
        </div>
        <div class="form-group form-check">
            <input name="allowComments" type="checkbox" class="form-check-input" id="checkbox">
            <label class="form-check-label" for="checkbox">Allow Comment</label>
        </div>
        <button type="submit" class="btn btn-primary">Save!</button>
    </form>
</div>