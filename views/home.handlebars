<div id="homepage" class="container">
    <h1>welcome</h1>
    <h1>social media</h1>
    {{#if user}}
    <p>You are logged in</p>
    {{else}}
    <h1>
        <a href="/auth/google" class="btn-social btn-gplus btn-lg">
            <i class="fa fa-google-plus"></i> Sign up with Google
        </a>
    </h1>

    <h1>
        <a href="/auth/facebook" class="btn-social btn-facebook btn-lg">
            <i class="fa fa-facebook"></i> Sign up with Facebook
        </a>
    </h1>

    <h1>
        <a href="/auth/instagram" class="btn-social btn-instagram btn-lg">
            <i class="fa fa-instagram"></i> Sign up with Instagram
        </a>
    </h1>
    {{/if}}
</div>